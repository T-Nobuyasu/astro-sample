---
const menus = [
  { text: 'HOME', href: '/' },
  { text: 'ABOUT', href: '/about/' },
  { text: 'BLOG', href: '/blog/' },
  { text: 'TAGS', href: '/tags/' },
];
---
<div
  transition:animate="slide"
  class="flex gap-x-10"
>
  { menus.map((menu) => {
    return (
      <a class="py-2 px-4 text-xl font-bold hover:text-purple-600" href={`${menu.href}`}>{menu.text}</a>
      )
  })}
</div>
